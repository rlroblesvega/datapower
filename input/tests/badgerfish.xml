<?xml version="1.0" encoding="utf-8"?>
<tests xmlns:json="http://json.org/">
	<params>
		<param name="use-rabbitfish">false</param>
		<param name="use-badgerfish">true</param>
		<param name="use-namespaces">false</param>
	</params>

	<test id="element-names">
		<input>
			<node-name/>
		</input>
		<output>
			<json:object>
				<json:member>
					<json:name/>
					<json:value>
						<json:object>
							<json:member>
								<json:name>node-name</json:name>
								<json:value/>
							</json:member>
						</json:object>
					</json:value>
				</json:member>
			</json:object>
		</output>
	</test>

	<test id="text-content">
		<input>
			<alice>bob</alice>
		</input>
		<output>
			<json:object>
				<json:member>
					<json:name/>
					<json:value>
						<json:object>
							<json:member>
								<json:name>alice</json:name>
								<json:value>
									<json:object>
										<json:member>
											<json:name>$</json:name>
											<json:value>bob</json:value>
										</json:member>
									</json:object>
								</json:value>
							</json:member>
						</json:object>
					</json:value>
				</json:member>
			</json:object>
		</output>
	</test>

	<test id="nested-elements">
		<input>
			<alice>
				<bob>charlie</bob>
				<david>edgar</david>
			</alice>
		</input>
		<output>
			<json:object>
				<json:member>
					<json:name/>
					<json:value>
						<json:object>
							<json:member>
								<json:name>alice</json:name>
								<json:value>
									<json:object>
										<json:member>
											<json:name>bob</json:name>
											<json:value>
												<json:object>
													<json:member>
														<json:name>$</json:name>
														<json:value>charlie</json:value>
													</json:member>
												</json:object>
											</json:value>
										</json:member>
										<json:member>
											<json:name>david</json:name>
											<json:value>
												<json:object>
													<json:member>
														<json:name>$</json:name>
														<json:value>edgar</json:value>
													</json:member>
												</json:object>
											</json:value>
										</json:member>
									</json:object>
								</json:value>
							</json:member>
						</json:object>
					</json:value>
				</json:member>
			</json:object>
		</output>
	</test>

	<test id="multiple-elements">
		<input>
			<alice>
				<bob>charlie</bob>
				<bob>david</bob>
			</alice>
		</input>
		<output>
			<json:object>
				<json:member>
					<json:name/>
					<json:value>
						<json:object>
							<json:member>
								<json:name>alice</json:name>
								<json:value>
									<json:object>
										<json:member>
											<json:name>bob</json:name>
											<json:value>
												<json:array>
													<json:array-value>
														<json:value>
															<json:object>
																<json:member>
																	<json:name>$</json:name>
																	<json:value>charlie</json:value>
																</json:member>
															</json:object>
														</json:value>
													</json:array-value>
													<json:array-value>
														<json:value>
															<json:object>
																<json:member>
																	<json:name>$</json:name>
																	<json:value>david</json:value>
																</json:member>
															</json:object>
														</json:value>
													</json:array-value>
												</json:array>
											</json:value>
										</json:member>
									</json:object>
								</json:value>
							</json:member>
						</json:object>
					</json:value>
				</json:member>
			</json:object>
		</output>
	</test>

	<test id="octal-number">
		<input>
			<root>
				<a>0123456789</a>
			</root>
		</input>
		<output>
			<json:object>
				<json:member>
					<json:name/>
					<json:value>
						<json:object>
							<json:member>
								<json:name>root</json:name>
								<json:value>
									<json:object>
										<json:member>
											<json:name>a</json:name>
											<json:value>
												<json:object>
													<json:member>
														<json:name>$</json:name>
														<json:value>0123456789</json:value>
													</json:member>
												</json:object>		
											</json:value>
										</json:member>
									</json:object>
								</json:value>
							</json:member>
						</json:object>
					</json:value>
				</json:member>
			</json:object>
		</output>
	</test>
	

	<test id="attributes">
		<input>
			<alice charlie="david">bob</alice>
		</input>
		<!-- note that I swapped the element text and attribute order -->
		<output>	
			<json:object>
				<json:member>
					<json:name/>
					<json:value>
						<json:object>
							<json:member>
								<json:name>alice</json:name>
								<json:value>
									<json:object>
										<json:member>
											<json:name>@charlie</json:name>
											<json:value>david</json:value>
										</json:member>
										<json:member>
											<json:name>$</json:name>
											<json:value>bob</json:value>
										</json:member>
									</json:object>
								</json:value>
							</json:member>
						</json:object>
					</json:value>
				</json:member>
			</json:object>
		</output>
	</test>
